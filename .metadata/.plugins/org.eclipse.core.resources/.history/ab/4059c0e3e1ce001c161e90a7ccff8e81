			System.out.println("Enter the floor size given on day : "+index);
		    int input=sc.nextInt();
		    if(input!=floors) {
		    	array[index]=input;
		    	Arrays.sort(array,Collections.reverseOrder());		    	
		    	floors--;
		    }
		    
		    
		    
		sc.close();
